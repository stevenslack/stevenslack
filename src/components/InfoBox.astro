---
const {
	title = '',
	content = '',
	paragraphStyles = '',
} = Astro.props;
---

{
	content &&
		<div class="infobox">
			{title && <h2>{title}</h2>}
			<p style={paragraphStyles}>
				{content}
			</p>
		</div>
}

<style>
	div {
		background-color: #b5e8ff;
		border-radius: 8px;
		padding: 1.5rem;
	}

	h2 {
		margin-block-start: 0;
	}

	p {
		margin-block-start: 0;
		margin-block-end: 0;
	}
</style>